# Fastfile for iOS
# MyXenPay iOS deployment automation

default_platform(:ios)

platform :ios do
  desc "Build debug IPA"
  lane :debug do
    sh "flutter build ios --debug"
  end

  desc "Build release IPA"
  lane :release do
    sh "flutter build ios --release"
  end

  desc "Deploy to TestFlight"
  lane :beta do
    # TODO: Configure App Store Connect credentials
    # build_app(
