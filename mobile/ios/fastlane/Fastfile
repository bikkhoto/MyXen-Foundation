    #   export_method: "app-store"
    # )
    # upload_to_testflight
    puts "TestFlight deployment configured - add App Store Connect credentials"
  end

  desc "Deploy to App Store"
  lane :deploy do
    # TODO: Configure App Store Connect credentials
    # build_app(
